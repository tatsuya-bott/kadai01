<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.japan.compass.annotation.repository.mapper.UserMapper">
    <select id="count" resultType="integer">
        SELECT
            count(*)
        FROM `user`
    </select>

    <select id="findById" resultMap="UserResult">
        SELECT
            id,
            mail,
            password,
            roles,
            created,
            last_logined,
            enabled
        FROM `user`
        WHERE `user`.id = #{id}
    </select>

    <select id="findByMail" resultMap="UserResult">
        SELECT
            id,
            mail,
            password,
            roles,
            created,
            last_logined,
            enabled
        FROM `user`
        WHERE `user`.mail = #{mail}
    </select>

    <resultMap id="UserResult" type="com.japan.compass.annotation.domain.entity.User">
        <id property="id" column="id"/>
        <result property="mail" column="mail"/>
        <result property="password" column="password"/>
        <result property="roles" column="roles"/>
        <result property="created" column="created"/>
        <result property="lastLogined" column="last_logined"/>
        <result property="enabled" column="enabled"/>
    </resultMap>

    <select id="findAll" resultMap="UserListResult">
        SELECT
            id,
            mail,
            password,
            roles,
            created,
            last_logined,
            enabled
        FROM `user`
        ORDER BY id
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <resultMap id="UserListResult" type="com.japan.compass.annotation.domain.entity.User">
        <id property="id" column="id"/>
        <result property="mail" column="mail"/>
        <result property="password" column="password"/>
        <result property="roles" column="roles"/>
        <result property="created" column="created"/>
        <result property="lastLogined" column="last_logined"/>
        <result property="enabled" column="enabled"/>
    </resultMap>

    <insert id="create">
        INSERT INTO `user`
        (
            mail,
            password,
            roles,
            created,
            last_logined,
            enabled
        )
        VALUES
        (
            #{mail},
            #{password},
            #{roles},
            #{time},
            #{time},
            true
        )
    </insert>

    <update id="updateLastLogined">
        UPDATE
            `user`
        SET
            last_logined = #{lastLogined}
        WHERE `user`.id = #{id}
    </update>

    <update id="updateEnabled">
        UPDATE
            `user`
        SET
            enabled = #{enabled}
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM `user`
        WHERE id = #{id}
    </delete>
</mapper>
