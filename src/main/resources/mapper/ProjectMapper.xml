<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.japan.compass.annotation.repository.mapper.ProjectMapper">
    <select id="find" resultMap="ProjectResultFind">
        SELECT
            id,
            name,
            description,
            type,
            enabled
        FROM `project`
        WHERE `project`.id = #{id}
    </select>
    
    <resultMap id="ProjectResultFind" type="com.japan.compass.annotation.domain.entity.Project">
	    <id property="id" column="id"/>
	    <result property="name" column="name"/>
	    <result property="description" column="description"/>
	    <result property="type" column="type"/>
	    <result property="enabled" column="enabled"/>
	</resultMap>
    
    <select id="findAll" resultMap="ProjectResultFindAll">
        SELECT
            id,
            name,
            description,
            type,
            enabled
        FROM `project`
        ORDER BY id
    </select>
    
    <resultMap id="ProjectResultFindAll" type="com.japan.compass.annotation.domain.entity.Project">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="type" column="type"/>
        <result property="enabled" column="enabled"/>
    </resultMap>    
    
    
    <select id="findEnabledAll" resultMap="ProjectResultEnabledAll">
        SELECT
            id,
            name,
            description,
            type,
            enabled
        FROM `project`
        WHERE `project`.enabled = true
        ORDER BY id
    </select>
    
    <resultMap id="ProjectResultEnabledAll" type="com.japan.compass.annotation.domain.entity.Project">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="type" column="type"/>
        <result property="enabled" column="enabled"/>
    </resultMap>

    <update id="disable">
        UPDATE
            `project`
        SET
            enabled = false
        WHERE `project`.id = #{id}
    </update>
    
    <insert id="insert">
        INSERT INTO project
        (
            name,
            description,
            type,
            enabled
        )
        VALUES
        (
            #{name},
            #{description},
            #{type},
            #{enabled}
        )
    </insert>

    <update id="update">
        UPDATE
            `project`
        SET
            name = #{name},
            description = #{description},
            enabled = #{enabled}
        WHERE `project`.id = #{id}
    </update>

    <delete id="delete">
        DELETE
        FROM `project`
        WHERE `project`.id = #{id}
    </delete>
</mapper>
